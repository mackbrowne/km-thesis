div.movie { font-family: Georgia;
            font-size: 120%;
            text-align: center; }

.movie div.framecontainer { width: 400px;
                            height: 400px;
                            border-radius: 50px;
                            display: inline-block;
                            background: #555; }

.movie #frame { margin-top: 90px; }

.movie button { width: 100px;
                height: 30px;
                background: #555;
                color: #fff;
                font-family: sans-serif;
                font-size: 16px;
                font-weight: bold;
                border: none;
                border-radius: 10px; }

.group .btn { margin: 10px; }
